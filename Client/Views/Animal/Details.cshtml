@model AnimalDTO

@{
    ViewBag.Title = "Animal list";
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoneyNeededPerMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter)
            </th>
        </tr>
    </thead>
    <tbody>   
        <tr>
            <td>
                @Model.Id
            </td>
            <td>
                @Model.Name
            </td>
            <td>
                @Model.MoneyNeededPerMonth
            </td>
            <td>
                @Model.BirthDate
            </td>
            <td>
                @Model.ArrivalDate
            </td>
            @{ if (@Model.Shelter != null)
                {
                        <td>
                            @Html.ActionLink(Model.Shelter.Name, "Details","Shelter", new { id = Model.Shelter.Id }, null)
                        </td>
                }
                else
                {
                    <td>
                        None
                    </td>
                }
            }
        </tr>
    </tbody>
</table>

<div class="align-bottom">
    @Html.ActionLink("Back to list", "Index") |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
</div>
        